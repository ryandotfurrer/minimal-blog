---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
);
---

<BaseLayout>
  <main class="space-y-4">
    <h1 class="py-8">writing</h1>
    <ul class="space-y-4">
      {
        posts.map((post) => (
          <a
            class="block rounded-lg outline-zinc-200 md:hover:bg-zinc-100 md:hover:outline dark:outline-zinc-700 dark:md:hover:bg-zinc-800"
            href={`/blog/${post.slug}/`}
          >
            <span class="sr-only">Read more about {post.data.title}</span>
            <li class="group space-y-2 rounded-lg py-4 md:px-4">
              <h4 class="transition-colors md:text-zinc-500 md:group-hover:text-zinc-900 dark:text-zinc-50 dark:md:text-zinc-400 dark:md:group-hover:text-zinc-50">
                {post.data.title}
              </h4>
              <p class="text-xs">
                <FormattedDate date={post.data.pubDate} />
              </p>
              <p class="line-clamp-2">{post.data.description}</p>
              <p class="text-sm text-zinc-900 transition-colors md:text-zinc-500 group-hover:md:text-zinc-900 dark:text-zinc-50 dark:md:text-zinc-400 dark:group-hover:md:text-zinc-50">
                Read more
                <span class="ml-1 transition-all md:group-hover:pl-1">-></span>
              </p>
            </li>
          </a>
        ))
      }
    </ul>
  </main>
</BaseLayout>
